<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/blue">
    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_back"
        android:padding="0dp"
        android:background="@color/blue"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_white"
        android:hint="书名/关键词"
        android:textSize="@dimen/traditional_font_size"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"/>
    <Button
        android:id="@+id/button_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_rectangle_red"
        android:text="搜索"
        android:textSize="@dimen/traditional_font_size"
        android:textColor="@color/white"
        />
   </LinearLayout>
   <include layout="@layout/item_search_spinner" />
    <ListView
        android:id="@+id/lv_after_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    </ListView>
</LinearLayout>
    <ListView
        android:id="@+id/search_filtration_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:layout_gravity="end"
        android:divider="@color/blue"
        android:dividerHeight="0dp"
        android:background="@color/grey">

    </ListView>
</android.support.v4.widget.DrawerLayout>