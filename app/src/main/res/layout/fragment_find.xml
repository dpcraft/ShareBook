<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_page_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/find_page_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/drawer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/find_page_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/blue">
                <Button
                    android:id="@+id/button_search_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_margin="7dp"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_search"
                    android:background="@drawable/shape_rectangle_white"
                    android:hint="书名/关键词"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/traditional_font_size"/>
                <Button
                    android:id="@+id/button_filtration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_filtration_32"
                    />

            </LinearLayout>
            <ListView
                android:id="@+id/find_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </FrameLayout>
    <ListView
        android:id="@+id/find_page_filtration_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:layout_gravity="end"
        android:divider="@color/blue"
        android:dividerHeight="0dp"
        android:background="@color/grey">

    </ListView>
</android.support.v4.widget.DrawerLayout>

