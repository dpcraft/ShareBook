<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="@drawable/whitebuttonshape">
    <Button
        android:id="@+id/button_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/ic_my_info"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/ic_my_message"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="消息中心"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/ic_my_upload"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的发布"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/ic_like"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的有意"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/ic_my_history"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="浏览历史"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/button_sign_out"
        android:background="@drawable/redbuttonshape"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        />
</LinearLayout>