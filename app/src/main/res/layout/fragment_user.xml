<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_np">
    <Button
        android:id="@+id/button_my_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_my_info"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_my_message"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="消息中心"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_upload"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_my_upload"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的发布"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_like"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_like"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的有意"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_my_history"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="浏览历史"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:text="——退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/traditional_font_size"
        />
</LinearLayout>