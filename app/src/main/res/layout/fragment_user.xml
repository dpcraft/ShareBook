<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="我就是我，不一样的Book"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_marginBottom="25sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_rectangle_light_blue"
        android:gravity="center"
        android:layout_gravity="center"
        >
    <Button
        android:id="@+id/button_my_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_my_info"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_my_message"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="消息中心"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_upload"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_my_upload"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的发布"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_like"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="fill"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_like"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="我的有意"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_my_history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_my_history"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="浏览历史"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    </LinearLayout>
    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rectangle_grey"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/traditional_font_size"
        />
</LinearLayout>